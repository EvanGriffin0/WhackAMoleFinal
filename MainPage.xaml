<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WhackAMoleFinal.MainPage"
             BackgroundImageSource="backgroundcave.png">

    <ScrollView>
        <VerticalStackLayout  VerticalOptions="Center" HorizontalOptions="Center" >
            <Grid>
                <Button x:Name="placeholder"  BackgroundColor="Transparent" WidthRequest="300"  HeightRequest="200"  >
                    
                </Button>
            </Grid>
            <Grid HorizontalOptions="Center" VerticalOptions="Center" >

                <Button x:Name="startButton" Text="START" TextColor="Black" BackgroundColor="LightYellow" WidthRequest="300"  HeightRequest="100" FontSize="30" BorderWidth="10"  FontAttributes="Bold" CornerRadius="30" />

            </Grid>

            <Grid HorizontalOptions="Center" VerticalOptions="Center">

                <Button x:Name="leaderBoardButton" Text="High Score" TextColor="Black" BackgroundColor="LightYellow" WidthRequest="300"  HeightRequest="100" FontSize="30" BorderWidth="10"  FontAttributes="Bold" CornerRadius="30" />
                
            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
